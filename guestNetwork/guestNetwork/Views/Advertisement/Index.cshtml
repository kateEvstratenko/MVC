@using PagedList.Mvc;
@model PagedList.IPagedList<guestNetwork.Models.Advertisement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table advertisement">
    <tr>
        <th>
            
        </th>
        <th>
            Title
        </th>
        <th>
            Content
        </th>
        <th>
            Type
        </th>
        <th>
            Responsed User
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Url.Content(item.mainImagePath)" class="mainAdvertisementsImage" alt="image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @if(item.Response != null)
                { 
                    @Html.ActionLink(item.Response.User.UserName, "Details", "Account", new { id = item.User.Id }, null)
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div class="pagedList">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                    new PagedListRenderOptions
                    {
                        LinkToFirstPageFormat = "<<",
                        LinkToPreviousPageFormat = "Назад",
                        LinkToNextPageFormat = "Вперед",
                        LinkToLastPageFormat = ">>"
                    })
</div>
