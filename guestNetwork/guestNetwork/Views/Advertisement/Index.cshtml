@using PagedList.Mvc;
@model PagedList.IPagedList<guestNetwork.Models.Advertisement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My advertisements</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Count > 0)
{
    <table class="table advertisement">
        <tr>
            <th>
            
            </th>
            <th>
                Title
            </th>
            <th>
                Content
            </th>
            <th>
                Type
            </th>
            <th>
                Response
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.mainImagePath != null)
                    {
                        <img src="@Url.Content(item.mainImagePath)" class="mainAdvertisementsImage" alt="image" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @if (item.Response != null)
                    {
                        <p>
                            @Html.DisplayFor(modelItem => item.Response.Message)
                        </p>
                        <p>
                            User: @Html.ActionLink(item.Response.User.UserName, "Details", "Account", new {id = item.Response.User.Id, backUrl = Request.Url.ToString()}, null)
                        </p>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id, backUrl = Request.Url.ToString()}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id, backUrl = Request.Url.ToString()}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id, backUrl = Request.Url.ToString()})
                </td>
            </tr>
        }

    </table>

    <div class="pagedList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new {page}),
            new PagedListRenderOptions
            {
                LinkToFirstPageFormat = "<<",
                LinkToPreviousPageFormat = "Prev",
                LinkToNextPageFormat = "Next",
                LinkToLastPageFormat = ">>"
            })
    </div>
}
