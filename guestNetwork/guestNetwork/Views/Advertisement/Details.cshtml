@using Microsoft.AspNet.Identity
@model guestNetwork.Models.Advertisement

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Advertisement</h4>
    <hr />
    <table >
        <tr>
            <td >
                <img src="@Url.Content(Model.MainImagePath)" class="mainAdvertisementsImage" alt="image" />
            </td>
            <td class="advertisementsInformation">
                <div class=" Title boldFont advertisementsInformationString">
                    @Html.DisplayFor(model => model.Title)
                </div>
                <div class="textWrap advertisementsInformationString">
                    @Html.DisplayFor(model => model.Content)
                </div>
                <div class="advertisementsInformationstring">
                    <span class="boldFont ">User: </span>
                    @Html.ActionLink(Model.User.UserName, "Details", "Account", new { id = Model.User.Id, backUrl = ViewBag.Url }, null)
                </div>
                <div class="advertisementsInformationString">
                    <span class="boldFont">Type: </span>
                    @Html.DisplayFor(model => model.Type)
                </div>
            </td>
        </tr>
    </table>
</div>

<p>
    @if (Model.Response == null)
    {
        if (Request.IsAuthenticated && Int32.Parse(User.Identity.GetUserId()) != Model.UserId)
         {
             <div id="responseForm">
                 @Ajax.ActionLink("Response to advertisement", "Create", "Response", 
                    new {id = Model.Id}, 
                    new AjaxOptions {UpdateTargetId = "responseForm"})
             </div>
         }
    }
    else
    {
        @Html.Action("Details", "Response", Model.Id)
    }
</p>
