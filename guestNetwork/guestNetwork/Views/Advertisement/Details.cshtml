@using Microsoft.AspNet.Identity
@model guestNetwork.Models.Advertisement

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Advertisement</h4>
	<hr />
    <table >
        <tr>
            <td >
                <a href="@Url.Action("Details", "Advertisement", new { id = Model.Id, backUrl = ViewBag.Url })">
                    <img src="@Url.Content(Model.MainImagePath)" class="mainAdvertisementsImage" alt="image" />
                </a>
            </td>
            <td class="advertisementsInformation">
                <div class=" Title boldFont advertisementsInformationString">
                    @Html.DisplayFor(model => model.Title)
                </div>
                <div class="textWrap advertisementsInformationString">
                    @Html.DisplayFor(model => model.Content)
                </div>
                <div class="advertisementsInformationstring">
                    <span class="boldFont ">User: </span>
                    @Html.ActionLink(Model.User.UserName, "Details", "Account", new { id = Model.User.Id, backUrl = ViewBag.Url }, null)
                </div>
                <div class="advertisementsInformationString">
                    <span class="boldFont">Type: </span>
                    @Html.DisplayFor(model => model.Type)
                </div>
            </td>
        </tr>
    </table>
</div>
<p>
    @if (Request.IsAuthenticated )
    {
        if (Int32.Parse(User.Identity.GetUserId()) == Model.UserId)
        {
           // @Html.ActionLink("Edit", "Edit", new {id = Model.Id, backUrl = ViewBag.BackUrl}) @(" | ")
        }
        else
        {
            if (Model.Response == null)
            {
                <div id="responseForm">
                    @Ajax.ActionLink("Response to advertisement", "Create", "Response", new {id = Model.Id}, new AjaxOptions {UpdateTargetId = "responseForm"})
                </div>
            }
        }
    }
</p>
