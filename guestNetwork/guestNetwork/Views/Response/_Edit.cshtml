@model guestNetwork.ViewModels.ResponseViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (@Ajax.BeginForm("Edit", "Response", new AjaxOptions { UpdateTargetId = "editResponse" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Response</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.AdvertisementId)
            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.UserName)

            <div class="form-group">
                @Html.LabelFor(model => model.Message, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Message, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Message)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</body>
</html>
