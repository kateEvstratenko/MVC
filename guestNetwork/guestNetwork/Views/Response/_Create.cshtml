@using guestNetwork.Models
@model guestNetwork.Models.Response

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
    <body>
        
        <div id="advertisementsResponse">
            @using (Ajax.BeginForm("Create", "Response", new AjaxOptions { UpdateTargetId = "advertisementsResponse"}))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Response</h4>
                    <hr />
                    @Html.ValidationSummary(true)

                    @Html.HiddenFor(model => model.AdvertisementId)
                    @Html.HiddenFor(model => model.UserId)
                    @Html.HiddenFor(model => model.User.UserName)
                    
                    @Html.LabelFor(model => model.Message, new { @class = "control-label col-md-2" })
                    <div class="form-group">
                       
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Message, new
                               {
                                   @class = "form-control advertisementsContent",
                                   @maxlength = GuestNetworkConstants.TextAreaLength
                               })
                            @Html.ValidationMessageFor(model => model.Message)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
</body>
</html>
